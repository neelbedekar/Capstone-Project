<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
        <ImageView
            android:contentDescription="@string/list_image_content_description"
            android:id="@+id/list_item_imageview"
            android:layout_width="@dimen/image_preview_dimensions"
            android:layout_height="@dimen/image_preview_dimensions"
            android:layout_margin="@dimen/list_item_margin"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:id="@+id/list_item_name_textview"
            android:layout_marginTop="@dimen/list_item_margin"
            android:layout_marginStart="@dimen/list_item_margin"
            android:textSize="@dimen/display_text_size"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_item_margin"
            android:layout_marginStart="@dimen/list_item_margin"
            android:id="@+id/list_item_phone_textview"
            android:textSize="@dimen/display_text_size"/>
    </LinearLayout>
</LinearLayout>